{
  "name": "root",
  "description": "Monorepo for Amazon Toolkit Firefox addon",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "lerna run test",
    "build": "lerna run build",
    "build:addon": "lerna run --scope @amzl-toolkit/addon build",
    "build:theme": "lerna run --scope @amzl-toolkit/theme build",
    "build:ui": "lerna run --scope @amzl-toolkit/ui build"
  },
  "keywords": [
    "monorepo",
    "Amazon Logistics",
    "Amazon",
    "AMZL",
    "Firefox",
    "addon"
  ],
  "author": "George Bockari <bitwhys@cr8iv.io>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.6.1",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "cz-conventional-changelog": "3.3.0",
    "lerna": "^5.2.0",
    "nx": "^14.4.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": "git@github.com:bitwhys/amzl-toolkit.git"
}
